<%= form_for :post, url: posts_path,remote: true do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%= msg %></div>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %><br/>
    <%= f.text_field(:title, {:class => 'form-control', 'placeholder' =>"Enter title"})%>
  </div>
  <div class="form-group">
    <%= f.label :body %><br/>
    <%= f.cktext_area(:body, {:class => 'form-control', 'placeholder' =>"Enter body"})%>
  </div>
  <div class="form-group">
    <%= f.label :url%><br/>
    <%= f.text_field(:url, {:class => 'form-control', 'placeholder' => "Enter url"})%>
  </div>
  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
